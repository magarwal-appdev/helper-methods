<h1>Edit movie</h1>

<% @movie.errors.full_messages.each do |message| %>
  <p style="color: red;"><%= message %></p>
<% end %>



<%= form_with(model: @movie, method: :patch) do |form| %>
  <div>
    <%= form.label :title %>

    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description %>

    <%= form.text_area :description, rows: 3 %>
  </div>

  <%= form.button %>
<% end %>




<%= form_with(url: movie_path(@movie), method: :patch) do %>
<div>
    <%= label_tag :title %>

    <%= text_field_tag :title, @movie.title %>
  </div>

  <div>
    <%= label_tag :description %>

    <%= text_area_tag :description, @movie.description, id: "description", rows: "3" %>
  </div>

  <%= button_tag "Update movie" %>
<% end %>

